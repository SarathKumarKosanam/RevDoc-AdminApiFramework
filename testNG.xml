<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Admin API Regression Suite" verbose="1">

    <!-- 
        The <test> tag is a container for TestNG groups, classes, or packages.
    -->
    <test name="Admin Functional Tests - All Classes in Package">
        <packages>
            <!-- 
                CRITICAL: Replace 'com.rev.admin.tests' with the actual base package 
                where your TestNG test classes are located.
                
                This configuration automatically detects and runs ALL classes 
                that contain TestNG methods within the specified package.
            -->
            <package name="com.rev.admin.tests"/>
        </packages>
    </test>

    <!-- 
        If you prefer to list classes explicitly instead of a whole package:
    <test name="Specific Admin Tests">
        <classes>
            <class name="com.rev.admin.tests.ProcedrueLoading"/>
            <class name="com.rev.admin.tests.AnotherTestClass"/>
        </classes>
    </test>
    -->

</suite>
